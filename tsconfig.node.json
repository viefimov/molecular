{
  "ts-node": { "esm": true },
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "dist/backend",
    "skipLibCheck": true,
    "isolatedModules": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"],
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "src/**/*.test.ts"
  ]
}
